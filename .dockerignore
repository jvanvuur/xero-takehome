# Ignore bundler config.
/bills/.bundle

# Ignore the default SQLite database.
/bills/db/*.sqlite3
/bills/db/*.sqlite3-*

# Ignore all logfiles and tempfiles.
/bills/log/*
/bills/tmp/*
!/bills/log/.keep
!/bills/tmp/.keep

# Ignore pidfiles, but keep the directory.
/bills/tmp/pids/*
!/bills/tmp/pids/
!/bills/tmp/pids/.keep

# Ignore uploaded files in development.
/bills/storage/*
!/bills/storage/.keep
/bills/tmp/storage/*
!/bills/tmp/storage/
!/bills/tmp/storage/.keep

/bills/public/assets

# Ignore master key for decrypting credentials and more.
/bills/config/master.key

/bills/.rvmrc
